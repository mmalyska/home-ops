    {
      "description": "Lock version to cluster version",
      "matchDatasources": ["docker", "github-releases"],
      "allowedVersions": "=1.25.5",
      "matchPackageNames": ["alpine/k8s", "kubernetes/kubernetes"]
    }
  ]
}
