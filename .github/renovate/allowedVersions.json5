{
  "packageRules": [
    {
      "description": "Lock version because they changed versioning",
      "matchDatasources": ["docker"],
      "allowedVersions": "<1",
      "matchPackageNames": ["linuxserver/calibre-web"]
    },
    {
      "description": "Lock version because they changed versioning",
      "matchDatasources": ["docker"],
      "allowedVersions": "<2000",
      "matchPackageNames": ["linuxserver/jellyfin"]
