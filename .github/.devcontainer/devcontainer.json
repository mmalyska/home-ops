{
    "name": "home-ops",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "."
    },
    "remoteUser": "vscode",
    "onCreateCommand": "bash -c 'ls -la /'",
    "features": {
        "ghcr.io/devcontainers/features/go": {},
        "./local-features/homebrew": {},
        "ghcr.io/devcontainers-contrib/features/homebrew-package": {
            "package": "go-task"
        },
        "./local-features/common": {}
    }
}
