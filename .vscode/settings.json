{
    "ansible.ansibleLint.arguments": "-c .github/linters/.ansible-lint",
    "files.associations": {
        "*.json5": "jsonc",
        "**/provision/ansible/**/*.y*ml": "ansible",
        "**/provision/ansible/**/*.sops.y*ml": "yaml",
        "**/provision/ansible/**/inventory/**/*.y*ml": "yaml",
        "**/provision/terraform/**/*.tf": "terraform"
    },
    "prettier.configPath": ".github/linters/.prettierrc.yaml",
    "prettier.ignorePath": ".github/linters/.prettierignore",
    "yaml.schemas": {
        "Kubernetes": "cluster/*.y*ml",
        "ansible": [
            "provision/ansible/*.y*ml"
        ],
        "https://taskfile.dev/schema.json": ".taskfiles/*.y*ml"
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":"active",
    "editor.hover.delay": 1500,
    "ansible.python.interpreterPath": "/home/linuxbrew/.linuxbrew/bin/python3"
}
