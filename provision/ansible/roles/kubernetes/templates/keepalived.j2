vrrp_script chk_haproxy {
    script "killall -0 haproxy" # check the haproxy process
    interval 2 # every 2 seconds
    weight 2 # add 2 points if OK
}
vrrp_instance VI_1 {
    state {{ 'MASTER' if groups.master.index(inventory_hostname) == 0 else 'BACKUP' }}
    interface {{ ansible_default_ipv4.interface }}
    virtual_router_id 1
    priority {{ 100 - groups.master.index(inventory_hostname) }}
    advert_int 1
    nopreempt
    authentication {
        auth_type AH
        auth_pass {{ kubevip_auth_pass }}
    }
    virtual_ipaddress {
        {{ kubevip_address }}
    }
    track_script {
        chk_haproxy
    }
}
